{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
